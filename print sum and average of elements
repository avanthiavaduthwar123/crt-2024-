#include <stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    int a[n],i;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    int s=0;
    for(i=0;i<n;i++)
    {
        s=s+a[i];
    }
    float avg=(float)s/n;
    printf("%d\n%f",s,avg);
    }


